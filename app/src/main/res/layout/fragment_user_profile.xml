<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ParkirYuk.profile.userProfileFragment"
    android:background="?attr/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/getUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="?attr/textColor"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Username" />

        <TextView
            android:id="@+id/getEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="?attr/textColor"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getUsername"
            tools:text="Email Address" />

        <TextView
            android:id="@+id/TextviewBox"
            android:layout_width="260dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/box"
            app:layout_constraintTop_toBottomOf="@id/getEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:fontFamily="@font/montserrat_light"
            android:textSize="20sp"
            android:textColor="?attr/textColor"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@id/TextviewBox"
            app:layout_constraintStart_toStartOf="@id/TextviewBox"
            app:layout_constraintEnd_toEndOf="@id/TextviewBox"/>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="240dp"
            android:layout_height="190dp"
            app:layout_constraintTop_toBottomOf="@id/head"
            app:layout_constraintStart_toStartOf="@id/TextviewBox"
            app:layout_constraintEnd_toEndOf="@id/TextviewBox"
            android:layout_marginTop="2dp">
        </ListView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>