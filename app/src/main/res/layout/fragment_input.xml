<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ParkirYuk.InputFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/logo_widht"
            android:layout_height="@dimen/logo_height"
            android:layout_marginTop="20dp"
            android:src="@mipmap/logo_parkir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="260dp"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/box"
            android:fontFamily="@font/montserrat_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Tempat"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="@id/textView3"
            app:layout_constraintStart_toStartOf="@id/textView3"
            app:layout_constraintEnd_toEndOf="@id/textView3"/>

        <TextView
            android:id="@+id/atau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorBlack"
            android:text="/"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/placeName"
            app:layout_constraintStart_toStartOf="@id/textView3"
            app:layout_constraintEnd_toEndOf="@id/textView3"/>

        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/atau"
            app:layout_constraintTop_toBottomOf="@id/placeName"
            android:text="max" />

        <TextView
            android:id="@+id/current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/placeName"
            app:layout_constraintEnd_toStartOf="@id/atau"
            android:text="current" />

        <ImageView
            android:id="@id/add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/add_icon"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toStartOf="@id/atau"
            app:layout_constraintTop_toBottomOf="@id/textView3" />

        <ImageView
            android:id="@+id/remove"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/remove_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@id/atau"
            app:layout_constraintTop_toBottomOf="@id/textView3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>